# Example Streamlit secrets file
# Copy this to .streamlit/secrets.toml and fill in your actual values
# This file is for local testing - Streamlit Cloud uses the web interface

[llm_api]
key = "your-openai-api-key-here"
provider = "openai"  # Options: "openai", "anthropic", "google"
use_for_bio = "true"  # Set to "true" to enable API-generated biographies in the app

